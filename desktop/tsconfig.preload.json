{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist-electron/preload",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src/preload/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist-electron",
        "removeComments": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/main/**/*.ts",
        "src/preload/**/*.ts",
        "src/shared/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-electron"
    ]
}